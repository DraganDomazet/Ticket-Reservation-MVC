
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tickets</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <meta name="description" content="The description of my page" />
</head>
<body style="background-color: antiquewhite; margin:10px">
    <div class="container-fluid btn-toolbar">
        <a href="/Customer/Index" class="btn btn-primary pull-left" style="margin:10px"> Home </a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <h3 style="margin-top:10px">Tickets:</h3>
                <h2 class="text-danger text-center">@ViewBag.error</h2>
                @{ foreach (var item in ViewBag.tickets)
                    {
                        if (item.Deleted == false)
                        {
                            <table style="background-color:aquamarine; width:100%; border:solid; border-color:darkgray; margin-top:2px">
                                <tr>
                                    <td width="400">
                                        <p>Manifestation: @item.Manifestation </p>
                                        <p>Price: @item.Price</p>
                                        <p>Date: @item.Time</p>
                                    </td>
                                    <td><a href="/Customer/Cancel?id=@item.Id"><input type="button" class="btn btn-default" value="Cancel" /></a></td>
                                    <td colspan="2"></td>
                                </tr>
                            </table>
                        }
                    }
                }
            </div>
            <div class="col-md-7" style="margin-top:43px">
                <form method="post" action="/Customer/Search">
                    <table>
                        <tr>
                            <th colspan="3" align="left">Search tickets:</th>
                        </tr>
                        <tr>
                            <td>Manifestation name: </td>
                            <td><input type="text" class="form-control" name="Name" /></td>
                        </tr>
                        <tr>
                            <td>Price: </td>
                            <td><input type="number" class="form-control" name="StartPrice" /></td>
                            <td><input type="number" class="form-control" name="EndPrice" /></td>
                        </tr>
                        <tr>
                            <td>Start date and finish date: </td>
                            <td><input type="date" class="form-control" name="StartDate" /></td>
                            <td><input type="date" class="form-control" name="EndDate" /></td>
                        </tr>
                        <tr>
                            <td colspan="3" align="center">
                                <input type="submit" style="margin-top:15px; margin-bottom:15px" value="Search" class="btn btn-success" />
                            </td>
                        </tr>
                    </table>
                </form>
                <div class="col-md-4">
                    <form method="post" action="/Customer/Sort">
                        <table>
                            <tr>
                                <td class="col-md-3">Sort by: </td>
                            </tr>
                            <tr>
                                <td class="col-md-3">Name ascending</td>
                                <td class="col-md-1"><input type="radio" name="radio" value="aName" /></td>
                            </tr>
                            <tr>
                                <td class="col-md-3">Name descending</td>
                                <td class="col-md-1"><input type="radio" name="radio" value="dName" /></td>
                            </tr>
                            <tr>
                                <td class="col-md-3">First newest</td>
                                <td class="col-md-1"><input type="radio" name="radio" value="dDate" /></td>
                            </tr>
                            <tr>
                                <td class="col-md-3">First oldest</td>
                                <td class="col-md-1"><input type="radio" name="radio" value="aDate" /></td>
                            </tr>
                            <tr>
                                <td class="col-md-3">Price descending</td>
                                <td class="col-md-1"><input type="radio" name="radio" value="dPrice" /></td>
                            </tr>
                            <tr>
                                <td class="col-md-3">Price ascending</td>
                                <td class="col-md-1"><input type="radio" name="radio" value="aPrice" /></td>
                            </tr>
                            <tr>
                                <td colspan="2" align="center"><input type="submit" style="margin-top:5px" name="submit" class="btn btn-info" value="Sort" /></td>
                            </tr>
                        </table>
                    </form>
                </div>
                <div class="col-md-5">
                    <div>
                        Filter tickets by
                        <p>&nbsp;</p>
                        <form method="post" action="/Customer/Filter" class="form-group">
                            <table>
                                <tr>
                                    <td><p style="margin-right:10px">Type: </p></td>
                                    <td>
                                        <select name="radio" class="form-control" style="width:110px">
                                            <option value="Vip">Vip</option>
                                            <option value="Regular">Regular</option>
                                            <option value="FanPit">Fan Pit</option>
                                        </select>
                                    </td>
                                    <td><input type="submit" class="btn btn-danger" style="margin-left:10px" value="Filter" name="submit" /></td>
                                </tr>
                            </table>
                        </form>

                        <form method="post" action="/Customer/Filter2" class="form-group">
                            <table>
                                <tr>
                                    <td><p>Status:</p></td>
                                    <td>
                                        <select name="radio" class="form-control" style="margin-top:5px; width:110px">
                                            <option value="Reserved">Reserved</option>
                                            <option value="Cancelled">Cancelled</option>
                                        </select>
                                    </td>
                                    <td><input type="submit" class="btn btn-danger" style="margin-left:10px" value="Filter" name="submit" /></td>
                                </tr>
                            </table>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
